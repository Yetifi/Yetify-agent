# Yetify Backend Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/yetify-development
REDIS_URL=redis://localhost:6379

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# Blockchain Configuration
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-api-key
NEAR_RPC_URL=https://rpc.testnet.near.org
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your-api-key

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# External Services
CHAINLINK_API_KEY=your-chainlink-api-key
PYTH_API_KEY=your-pyth-api-key

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Smart Contract Addresses (Testnet)
ETHEREUM_VAULT_CONTRACT=0x...
NEAR_VAULT_CONTRACT=your-contract.testnet
ARBITRUM_VAULT_CONTRACT=0x...